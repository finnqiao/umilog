{
  "version": 8,
  "name": "UmiLog Daylight",
  "metadata": {
    "maputnik:renderer": "mbgljs",
    "maputnik:optimized": true,
    "description": "High-contrast light theme for outdoor visibility on dive boats"
  },
  "sources": {
    "carto-light": {
      "type": "raster",
      "tiles": [
        "https://basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "minzoom": 0,
      "maxzoom": 18,
      "attribution": "© OpenStreetMap contributors, © CARTO"
    },
    "water-overlay": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": []
      }
    },
    "dive-areas": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": []
      }
    },
    "dive-sites": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": []
      }
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#D6EAF8"
      }
    },
    {
      "id": "carto-base",
      "type": "raster",
      "source": "carto-light",
      "minzoom": 0,
      "maxzoom": 18,
      "paint": {
        "raster-opacity": 1.0
      }
    },
    {
      "id": "dive-area-glow",
      "type": "circle",
      "source": "dive-areas",
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          50,
          8,
          35,
          15,
          18
        ],
        "circle-color": [
          "match",
          ["get", "status"],
          "Logged",
          "rgba(30,100,160,0.20)",
          "Saved",
          "rgba(59,130,246,0.20)",
          "Planned",
          "rgba(217,119,6,0.22)",
          "Default",
          "rgba(30,100,160,0.18)",
          "rgba(30,75,122,0.18)"
        ],
        "circle-opacity": 0.5,
        "circle-blur": 4
      }
    },
    {
      "id": "dive-area-circle",
      "type": "circle",
      "source": "dive-areas",
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          40,
          8,
          25,
          15,
          12
        ],
        "circle-color": [
          "match",
          ["get", "status"],
          "Logged",
          "#1E64A0",
          "Saved",
          "#3B82F6",
          "Planned",
          "#D97706",
          "Default",
          "#1E5080",
          "#1E5080"
        ],
        "circle-opacity": 0.9,
        "circle-stroke-width": 2.5,
        "circle-stroke-color": "#FFFFFF",
        "circle-stroke-opacity": 0.95
      }
    },
    {
      "id": "dive-site-circle",
      "type": "circle",
      "source": "dive-sites",
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8,
          9,
          12,
          11,
          15,
          14
        ],
        "circle-color": [
          "match",
          ["get", "difficulty"],
          "Beginner",
          "#16A34A",
          "Intermediate",
          "#2563EB",
          "Advanced",
          "#D97706",
          "Expert",
          "#DC2626",
          "#1E64A0"
        ],
        "circle-opacity": 1.0,
        "circle-stroke-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8,
          2.5,
          15,
          3.5
        ],
        "circle-stroke-color": "#FFFFFF",
        "circle-stroke-opacity": 1.0
      }
    },
    {
      "id": "dive-site-label",
      "type": "symbol",
      "source": "dive-sites",
      "layout": {
        "text-field": ["get", "name"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10,
          11,
          15,
          13
        ],
        "text-offset": [0, 1.5],
        "text-anchor": "top",
        "text-font": ["Open Sans Semibold", "Arial Unicode MS Bold"]
      },
      "paint": {
        "text-color": "#1F2937",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1.5,
        "text-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10,
          0,
          12,
          1
        ]
      }
    },
    {
      "id": "area-count-label",
      "type": "symbol",
      "source": "dive-areas",
      "layout": {
        "text-field": ["get", "count"],
        "text-size": 14,
        "text-font": ["Open Sans Bold", "Arial Unicode MS Bold"],
        "text-anchor": "center",
        "text-justify": "center"
      },
      "paint": {
        "text-color": "#FFFFFF",
        "text-halo-color": "#1E4060",
        "text-halo-width": 1.0,
        "text-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          0,
          8,
          1
        ]
      }
    }
  ]
}
