{
  "version": 8,
  "name": "UmiLog Underwater",
  "metadata": {
    "maputnik:renderer": "mbgljs",
    "maputnik:optimized": true
  },
  "sources": {
    "osm-data": {
      "type": "vector",
      "url": "https://tile.openstreetmap.org/data/planet.mbtiles"
    },
    "carto-dark": {
      "type": "raster",
      "tiles": [
        "https://cartodb-basemaps-a.global.ssl.fastly.net/dark_all/{z}/{x}/{y}.png",
        "https://cartodb-basemaps-b.global.ssl.fastly.net/dark_all/{z}/{x}/{y}.png",
        "https://cartodb-basemaps-c.global.ssl.fastly.net/dark_all/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "minzoom": 0,
      "maxzoom": 18,
      "attribution": "© OpenStreetMap contributors, © CARTO"
    }
  },
  "sprite": "",
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#0a1628"
      }
    },
    {
      "id": "carto-base",
      "type": "raster",
      "source": "carto-dark",
      "minzoom": 0,
      "maxzoom": 18,
      "paint": {
        "raster-opacity": 0.9,
        "raster-brightness-min": -0.1,
        "raster-brightness-max": 0.8,
        "raster-saturation": -0.3
      }
    },
    {
      "id": "water-overlay",
      "type": "fill",
      "source": {
        "type": "geojson",
        "data": {
          "type": "FeatureCollection",
          "features": []
        }
      },
      "paint": {
        "fill-color": "#0d3e5e",
        "fill-opacity": 0.25
      }
    },
    {
      "id": "dive-area-circle",
      "type": "circle",
      "source": {
        "type": "geojson",
        "data": {
          "type": "FeatureCollection",
          "features": []
        }
      },
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 40,
          8, 25,
          15, 12
        ],
        "circle-color": [
          "match",
          ["get", "status"],
          "Logged", "#14b8a6",
          "Saved", "#3b82f6",
          "Planned", "#f59e0b",
          "#6366f1"
        ],
        "circle-opacity": 0.9,
        "circle-stroke-width": 2,
        "circle-stroke-color": "#ffffff",
        "circle-stroke-opacity": 0.6
      }
    },
    {
      "id": "dive-area-glow",
      "type": "circle",
      "source": {
        "type": "geojson",
        "data": {
          "type": "FeatureCollection",
          "features": []
        }
      },
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 50,
          8, 35,
          15, 18
        ],
        "circle-color": [
          "match",
          ["get", "status"],
          "Logged", "#14b8a6",
          "Saved", "#3b82f6",
          "Planned", "#f59e0b",
          "#6366f1"
        ],
        "circle-opacity": 0.15,
        "circle-blur": 4
      ]
    },
    {
      "id": "dive-site-circle",
      "type": "circle",
      "source": {
        "type": "geojson",
        "data": {
          "type": "FeatureCollection",
          "features": []
        }
      },
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 8,
          12, 10,
          15, 12
        ],
        "circle-color": [
          "match",
          ["get", "difficulty"],
          "Beginner", "#3b82f6",
          "Intermediate", "#f97316",
          "Advanced", "#dc2626",
          "#6366f1"
        ],
        "circle-opacity": 0.95,
        "circle-stroke-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 1.5,
          15, 2
        ],
        "circle-stroke-color": "#ffffff",
        "circle-stroke-opacity": 0.8
      }
    },
    {
      "id": "dive-site-label",
      "type": "symbol",
      "source": {
        "type": "geojson",
        "data": {
          "type": "FeatureCollection",
          "features": []
        }
      },
      "layout": {
        "text-field": ["get", "name"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 10,
          15, 12
        ],
        "text-offset": [0, 1.5],
        "text-anchor": "top",
        "text-font": ["Open Sans Semibold", "Arial Unicode MS Bold"]
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1,
        "text-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 0,
          12, 1
        ]
      }
    },
    {
      "id": "area-count-label",
      "type": "symbol",
      "source": {
        "type": "geojson",
        "data": {
          "type": "FeatureCollection",
          "features": []
        }
      },
      "layout": {
        "text-field": ["get", "count"],
        "text-size": 14,
        "text-font": ["Open Sans Bold", "Arial Unicode MS Bold"],
        "text-anchor": "center",
        "text-justify": "center"
      },
      "paint": {
        "text-color": "#ffffff",
        "text-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0,
          8, 1
        ]
      }
    }
  ]
}
